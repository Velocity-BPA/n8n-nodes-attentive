{
  "name": "n8n-nodes-attentive",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Attentive SMS marketing platform providing subscriber management, messaging, custom events, eCommerce tracking, and campaign analytics with 10 resources and 35+ operations.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-attentive.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-attentive#readme",
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-attentive/issues"
  },
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "attentive",
    "sms",
    "mms",
    "marketing",
    "mobile-messaging",
    "subscriber-management",
    "ecommerce",
    "automation"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/AttentiveApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Attentive/Attentive.node.js",
      "dist/nodes/Attentive/AttentiveTrigger.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.22.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.0.0"
  }
}
